<%= form_for @tweet do |f| %>
  <div class="field">
    <%= f.label :song, "曲名" %><br>
    <%= f.text_field :song %>
  </div>

  <div class="field">
    <%= f.label :artist, "アーティスト" %><br>
    <%= f.text_field :artist %>
  </div>

  <div class="field">
    <%= f.label :comment, "コメント" %><br>
    <%= f.text_area :comment %>
  </div>

  <div class="field">
    <%= f.label :level, "難易度" %><br>
    <%= f.number_field :level %>
  </div>

  <div class="actions">
    <%= f.submit "編集する" %>
  </div>
<% end %>
