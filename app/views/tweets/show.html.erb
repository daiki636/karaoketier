<h1>karaoketier</h1>
<h3>投稿詳細</h3>
<div class="tweet">
  <p><%= @tweet.comment %></p>
  <p><%= @tweet.created_at %></p>
  <p><%= @tweet.overall %>
  <p><%= @tweet.level %>
  <p><%= @tweet.comment %>
   <% if user_signed_in? %>
      <% if current_user.already_liked?(@tweet) %>
        <%= link_to tweet_like_path(@tweet), method: :delete do %>
          <p>いいねを取り消す</p><%= @tweet.likes.count %>
        <% end %>
      <% else %>
        <%= link_to tweet_likes_path(@tweet), method: :post do %>
          <p>いいね</p><%= @tweet.likes.count %>
        <% end %>
      <% end %>
    <% else %>
      <p>いいねの数 = </p><%= @tweet.likes.count %>
    <% end %>
  <%= link_to "編集する", edit_tweet_path(@tweet.id) %>
</div>

<h2>いいねしたユーザー</h2>
<% @tweet.liked_users.each do |user| %>
  <li><%= user.email %></li>
<% end %>

<%= link_to "Tweet一覧に戻る", tweets_path %>
<% if user_signed_in? && current_user.id ==@tweet.user_id %>
      <%= link_to "編集する", edit_tweet_path(@tweet.id) %>
      <%= button_to "削除する", tweet_path(@tweet.id), method: :delete %>
     <% end %>

<% @tweet.tags.each do |tag| %>
    <span><%= tag.name %></span>
<% end %>